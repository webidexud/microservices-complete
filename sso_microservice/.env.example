# ============================================================================
# CONFIGURACIÓN DEL SISTEMA SSO
# ============================================================================

# Configuración del entorno
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Base de datos PostgreSQL
DB_HOST=sso-db
DB_PORT=5432
DB_NAME=sso_system
DB_USER=sso_admin
DB_PASSWORD=SSOSecure2024!
DB_SSL=false

# Redis (opcional para cache)
REDIS_HOST=sso-redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuración
JWT_SECRET=SSO_JWT_ULTRA_SECRET_KEY_2024_SECURE
JWT_REFRESH_SECRET=SSO_REFRESH_ULTRA_SECRET_KEY_2024_SECURE
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Configuración de seguridad
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15

# Usuario administrador inicial
ADMIN_EMAIL=admin@sso.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrador
ADMIN_LASTNAME=Sistema

# Configuración de la aplicación
APP_NAME=Sistema SSO
APP_URL=http://localhost:3000

# CORS (opcional)
CORS_ORIGIN=*

# Email (opcional para notificaciones)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@sso.com

# Configuración de archivos
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# Configuración de rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_LOGIN_MAX=5

# Configuración de logs
LOG_FILE_MAX_SIZE=20971520
LOG_FILE_MAX_FILES=5
LOG_RETENTION_DAYS=30